<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/suspantalla3"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/mar_top_top"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_height="wrap_content"
        android:textColor="@color/sky_blue"
        android:textSize="20sp"
        android:text="@string/et_num_activity" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="@dimen/obj_space"
        android:ems="10"
        android:textColor="@color/sky_blue"
        android:layout_marginLeft="@dimen/margin_left"
        android:inputType="textPersonName"
        android:text="" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="683dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/fondo_inicio_sesion"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_marginLeft="130dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/red_among_us_png" />
    </LinearLayout>

</RelativeLayout>